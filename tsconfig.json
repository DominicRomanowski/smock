{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "./build",
        "baseUrl": "./",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es7"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "paths": ["src/types/global.d.ts"],
    "include": ["*.ts", "**/*.ts"],
    "exclude": ["./build", "node_modules", "./test"]
}
